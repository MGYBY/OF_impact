FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      omega;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 -1 0 0 0 0];

internalField   uniform 0.003;

boundaryField
{
    #includeEtc "caseDicts/setConstraintTypes"

    sideWalls
    {
        type            omegaWallFunction;
        value           $internalField;
    }

    bottom
    {
        type            omegaWallFunction;
        value           $internalField;
    }

    blockFaces
    {
        type            omegaWallFunction;
        value           $internalField;
    }

    atmosphere
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }
}


