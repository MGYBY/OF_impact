FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    #includeEtc "caseDicts/setConstraintTypes"

    inlet
    {
        type            groovyBC;
        value           uniform (0 0 0);
        valueExpression "pos().z<=normalDepth ? vector(velProf,0,0) : vector(1.525,0,0)";
        variables       (
            "normalDepth=1.0;"
            "plN=1.0;"
            "expFactor=(1.0+plN)/plN;"
            // "normalPos=1.0-(pos().y/nd);"
            "normalPos=mag(1.0-(pos().z/normalDepth));"
            "velProf=(1.0+2.0*plN)/(1.0+plN)*(1.0-pow(normalPos, expFactor));"
        );
    }

    outlet
    {
        // original BC setup here
//         type    zeroGradient;
        // mud-flow setup here
        // type            inletOutlet;
        // inletValue      uniform (0 0 0);
        // value           uniform (0 0 0);
        type   flowRateOutletVelocity;
        volumetricFlowRate constant 5.0;
    }

    backNew
    {
        // type    zeroGradient;
        // type    slip;
        // type            groovyBC;
        // value           uniform (0 0 0);
        // valueExpression "pos().z<=normalDepth ? vector(velProf,0,0) : vector(1.525,0,0)";
        // variables       (
        //     "normalDepth=1.0;"
        //     "plN=1.0;"
        //     "expFactor=(1.0+plN)/plN;"
        //     // "normalPos=1.0-(pos().y/nd);"
        //     "normalPos=mag(1.0-(pos().z/normalDepth));"
        //     "velProf=(1.0+2.0*plN)/(1.0+plN)*(1.0-pow(normalPos, expFactor));"
        // );
        // type            symmetryPlane;
        // type            cyclic;
        type            cyclicAMI;
    }

    frontNew
    {
        // type            zeroGradient;
        // type            symmetryPlane;
        // type            cyclic;
        type            cyclicAMI;
    }

    bottom
    {
        type            noSlip;
    }

    cylinder
    {
        type            noSlip;
    }

    atmosphere
    {
        type            pressureInletOutletVelocity;
        value           uniform (0 0 0);
    }

    // Symmetry
    // {
    //     type            symmetryPlane;
    // }
}


