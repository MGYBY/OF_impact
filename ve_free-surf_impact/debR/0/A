FoamFile
{
    format      ascii;
    class       volSymmTensorField;
    object      theta;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 0 0 0 0 0 0];

internalField   uniform (0 0 0 0 0 0);

boundaryField
{
   Inlet
    {
      // TODO: add stress BCs
       type            fixedValue;
       value           uniform (0 0 0 0 0 0);
    }
    
    Outlet
    {
       type            zeroGradient;
    }
    
    Bottom
    {
      type             zeroGradient;
    }
    
    Back
    {
       type            zeroGradient;
    }

    Cylinder
    {
       type            zeroGradient;
    }
    
    Atmosphere
    {
         type          zeroGradient;
    }
    
    Symmetry
    {
       type            symmetryPlane;
    }
}
