PIMPLE
{
    momentumPredictor no;
    nCorrectors     3;
    nOuterCorrectors 3;
    nNonOrthogonalCorrectors 0;
    pRefCell        0;
    pRefValue       0;
}

relaxationFactors
{
    equations
    {
        ".*" 1;
    }
}

