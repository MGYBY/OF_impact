FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "alpha.water.*"
    {
        nAlphaCorr      2;
        nAlphaSubCycles 2;
        cAlpha          1;

        MULESCorr       yes;
        nLimiterIter    4;

        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-8;
        relTol          0;
    }

    "pcorr.*"
    {
        solver          PCG;
        preconditioner  DIC;
        // tolerance       1e-10;
        tolerance       1e-8;
        relTol          0;
    }

    p_rgh
    {
        solver          PCG;
        preconditioner  DIC;
        // tolerance       1e-10;
        tolerance       1e-8;
        relTol          0.0;
    }

    p_rghFinal
    {
        $p_rgh;
        relTol          0;
    }

    "(theta.*|tau.*|U.*)"
    {

        solver           PBiCG;
        preconditioner
        {
            preconditioner DILU;
        }

        // tolerance         1e-10;
        tolerance         1e-8;
        relTol            0;
        minIter           0;
        maxIter           1000;
    } 
   
}

PIMPLE
{
    SIMPLEC           true;
    momentumPredictor true;
    
    nOuterCorrectors  2;
    nCorrectors       2;
    
    // nNonOrthogonalCorrectors 0;
    nNonOrthogonalCorrectors 1; // at least 1 suggested by Wolf Dynamics (dynamic mesh tut)
}

relaxationFactors
{
    equations
    {
        ".*" 1;
    }
}

